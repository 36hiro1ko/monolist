<% a=0 %>
<% @items.each do |item| %>
  <div class="item-box2">
  
      <div class="ranking">
        第<%= a+1 %>位<% a=a+1 %>
      </div>

     <div class="image2">    
        <% if item.large_image.present? %>
          <%= image_tag(item.large_image, alt: item.title) %>
        <% else %>
          <%= image_tag("no-image.png" , alt: item.title) %>
        <% end %>        
      </div>
      
      <div class="detail">
        <p class="title2">
          <%= item.title %>
        </p>
      </div>
      <%= render 'items/action' , item: item if logged_in? %>
  </div>
<% end %>